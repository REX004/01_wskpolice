<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="60dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/policeofficer_img"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_light"
        android:textSize="45sp"
        android:text="WSK Police"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/keyy_img"/>
        <EditText
            android:id="@+id/loginET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:hint="login"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/castler_img"/>
        <EditText
            android:id="@+id/passwordET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:hint="******"
            />
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remeber me"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/captchaEnterTXT"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter captcha:"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/captchaContainer"
        android:visibility="gone"

        android:layout_marginTop="10dp"
        android:layout_width="76dp"
        android:layout_height="76dp"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/captchaaimg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="52dp"
            android:layout_height="33dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/captcha1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#805AAE"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/captcha2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#805AAE"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/captcha3"
            app:layout_constraintStart_toEndOf="@+id/captcha1"
            app:layout_constraintTop_toTopOf="@+id/view" />
        <TextView
            android:id="@+id/captcha3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#805AAE"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.button.MaterialButton
        android:visibility="visible"
        android:layout_marginTop="70dp"
        android:id="@+id/signBT"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="SignIn"
        style="@style/Platform.MaterialComponents"
        android:backgroundTint="@color/green"/>

    <com.google.android.material.button.MaterialButton
        android:visibility="visible"
        android:id="@+id/gustBT"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Guest"
        style="@style/Platform.MaterialComponents"
        android:backgroundTint="@color/green"/>
    <EditText
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:id="@+id/captchaET"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="login"
        />
    <com.google.android.material.button.MaterialButton

        android:visibility="gone"
        android:id="@+id/okBT"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="OK"
        style="@style/Platform.MaterialComponents"
        android:backgroundTint="@color/green"/>
</LinearLayout>